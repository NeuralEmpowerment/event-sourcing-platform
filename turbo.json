{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["src/**/*.ts", "tsconfig*.json", "package.json"],
      "outputs": ["dist/**", "tsconfig.tsbuildinfo"]
    },
    "gen": {
      "inputs": ["../../eventstore-proto/proto/**/*.proto"],
      "outputs": ["src/gen/**"]
    },
    "prepare": {
      "dependsOn": ["gen"],
      "inputs": ["src/**/*.ts", "tsconfig*.json", "package.json"],
      "outputs": ["dist/**", "src/gen/**"]
    },
    "test": {
      "dependsOn": ["build"],
      "inputs": ["src/**/*.ts", "tests/**/*.ts", "jest.config.*"],
      "outputs": ["coverage/**"]
    },
    "lint": {
      "inputs": ["src/**/*.ts", "tests/**/*.ts", "eslint.config.*", ".eslintrc*"],
      "outputs": []
    },
    "type-check": {
      "inputs": ["src/**/*.ts", "tests/**/*.ts", "tsconfig*.json"],
      "outputs": []
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "clean": {
      "cache": false
    }
  },
  "globalDependencies": [
    "pnpm-lock.yaml",
    "turbo.json"
  ]
}

