{
    "name": "@event-sourcing-platform/typescript",
    "version": "0.1.0",
    "description": "TypeScript SDK for Event Sourcing patterns and abstractions",
    "main": "dist/index.js",
    "types": "dist/index.d.ts",
    "exports": {
        ".": {
            "types": "./dist/index.d.ts",
            "default": "./dist/index.js"
        },
        "./package.json": "./package.json"
    },
    "files": [
        "dist",
        "README.md"
    ],
    "sideEffects": false,
    "scripts": {
        "build": "tsc",
        "prepare": "pnpm run build",
        "test": "node --experimental-vm-modules ./node_modules/jest/bin/jest.js",
        "test:watch": "node --experimental-vm-modules ./node_modules/jest/bin/jest.js --watch",
        "lint": "eslint src tests --ext .ts",
        "lint:fix": "eslint src tests --ext .ts --fix",
        "format": "prettier --write src/**/*.ts",
        "clean": "rimraf dist",
        "qa": "npm run lint && npm run test && npm run build",
        "prepublishOnly": "npm run qa"
    },
    "keywords": [
        "event-sourcing",
        "cqrs",
        "ddd",
        "aggregate",
        "typescript"
    ],
    "author": "Event Sourcing Platform Team",
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "https://github.com/NeuralEmpowerment/event-sourcing-platform.git",
        "directory": "event-sourcing/typescript"
    },
    "publishConfig": {
        "registry": "https://npm.pkg.github.com",
        "access": "public"
    },
    "engines": {
        "node": ">=18.0.0"
    },
    "dependencies": {
        "@eventstore/sdk-ts": "workspace:*",
        "@grpc/grpc-js": "^1.10.6",
        "@grpc/proto-loader": "^0.7.13",
        "long": "^5.2.3",
        "uuid": "^9.0.0",
        "zod": "^3.22.0"
    },
    "devDependencies": {
        "@types/jest": "^29.5.0",
        "@types/node": "^20.0.0",
        "@types/uuid": "^9.0.0",
        "@typescript-eslint/eslint-plugin": "^8.44.0",
        "@typescript-eslint/parser": "^8.44.0",
        "eslint": "^9.0.0",
        "globals": "^15.8.0",
        "jest": "^29.0.0",
        "prettier": "^3.0.0",
        "rimraf": "^5.0.0",
        "ts-jest": "^29.0.0",
        "typescript": "^5.0.0"
    },
    "jest": {
        "preset": "ts-jest",
        "testEnvironment": "node",
        "testMatch": [
            "**/tests/**/*.test.ts",
            "**/src/**/__tests__/**/*.test.ts"
        ],
        "collectCoverageFrom": [
            "src/**/*.ts",
            "!src/**/*.d.ts",
            "!src/examples/**"
        ],
        "transform": {
            "^.+\\.(ts)$": [
                "ts-jest",
                {
                    "useESM": true,
                    "tsconfig": "tsconfig.jest.json"
                }
            ]
        }
    }
}