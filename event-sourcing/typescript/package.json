{
    "name": "@event-sourcing-platform/typescript",
    "version": "0.1.0",
    "description": "TypeScript SDK for Event Sourcing patterns and abstractions",
    "main": "dist/index.js",
    "types": "dist/index.d.ts",
    "scripts": {
        "build": "tsc",
        "test": "jest",
        "test:watch": "jest --watch",
        "lint": "eslint src --ext .ts,.tsx",
        "lint:fix": "eslint src --ext .ts,.tsx --fix",
        "format": "prettier --write src/**/*.ts",
        "clean": "rimraf dist",
        "qa": "npm run lint && npm run test && npm run build",
        "prepublishOnly": "npm run qa"
    },
    "keywords": [
        "event-sourcing",
        "cqrs",
        "ddd",
        "aggregate",
        "typescript"
    ],
    "author": "Event Sourcing Platform Team",
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "https://github.com/yourorg/event-sourcing-platform.git",
        "directory": "event-sourcing/typescript"
    },
    "engines": {
        "node": ">=18.0.0"
    },
    "dependencies": {
        "uuid": "^9.0.0",
        "zod": "^3.22.0",
        "@eventstore/sdk-ts": "workspace:*"
    },
    "devDependencies": {
        "@types/jest": "^29.5.0",
        "@types/node": "^20.0.0",
        "@types/uuid": "^9.0.0",
        "@typescript-eslint/eslint-plugin": "^6.0.0",
        "@typescript-eslint/parser": "^6.0.0",
        "eslint": "^8.0.0",
        "jest": "^29.0.0",
        "prettier": "^3.0.0",
        "rimraf": "^5.0.0",
        "ts-jest": "^29.0.0",
        "typescript": "^5.0.0"
    },
    "jest": {
        "preset": "ts-jest",
        "testEnvironment": "node",
        "testMatch": [
            "**/tests/**/*.test.ts",
            "**/src/**/__tests__/**/*.test.ts"
        ],
        "collectCoverageFrom": [
            "src/**/*.ts",
            "!src/**/*.d.ts",
            "!src/examples/**"
        ]
    }
}
