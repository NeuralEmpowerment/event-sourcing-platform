{
  "name": "vsa-example-todo-list",
  "version": "1.0.0",
  "description": "Simple todo list application demonstrating VSA basics",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "ts-node src/index.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write \"src/**/*.ts\"",
    "vsa:validate": "vsa validate",
    "vsa:list": "vsa list"
  },
  "keywords": [
    "vsa",
    "vertical-slice-architecture",
    "event-sourcing",
    "cqrs",
    "ddd",
    "todo",
    "example"
  ],
  "author": "Neural Empowerment",
  "license": "MIT",
  "dependencies": {
    "uuid": "^9.0.0",
    "commander": "^11.0.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.0",
    "@types/node": "^20.0.0",
    "@types/uuid": "^9.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.45.0",
    "jest": "^29.5.0",
    "prettier": "^3.0.0",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.1.0"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "roots": ["<rootDir>/src"],
    "testMatch": ["**/*.test.ts"],
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!src/**/*.test.ts",
      "!src/index.ts"
    ]
  }
}

