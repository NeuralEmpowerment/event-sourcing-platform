{
  "name": "vsa-example-library-management",
  "version": "1.0.0",
  "description": "Library management system demonstrating bounded contexts and integration events",
  "main": "dist/api/server.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/api/server.js",
    "dev": "ts-node src/api/server.ts",
    "test": "jest",
    "test:unit": "jest src",
    "test:e2e": "jest tests/e2e --runInBand",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src --ext .ts",
    "vsa:validate": "vsa validate",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down"
  },
  "keywords": [
    "vsa",
    "vertical-slice-architecture",
    "event-sourcing",
    "bounded-contexts",
    "integration-events",
    "library",
    "example"
  ],
  "author": "Neural Empowerment",
  "license": "MIT",
  "dependencies": {
    "@eventstore/sdk-ts": "workspace:*",
    "express": "^4.18.0",
    "uuid": "^9.0.0",
    "cors": "^2.8.5"
  },
  "devDependencies": {
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.0",
    "@types/node": "^20.0.0",
    "@types/uuid": "^9.0.0",
    "@types/cors": "^2.8.13",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.45.0",
    "jest": "^29.5.0",
    "supertest": "^6.3.0",
    "@types/supertest": "^2.0.12",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.1.0"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "roots": ["<rootDir>/src", "<rootDir>/tests"],
    "testMatch": ["**/*.test.ts"],
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!src/**/*.test.ts",
      "!src/api/server.ts"
    ]
  }
}

